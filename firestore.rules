rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper Functions ──
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    function userBelongsToTenant(tenantId) {
      // Allow read/write if the user's profile specifies they belong to this tenant.
      // E.g., request.auth.uid exists in /users/ and document.tenantId == tenantId
      // AND if they're a Platform Super ('pertuto-default' or specific email)
      return isAuthenticated() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super'
      );
    }

    // ── User Profiles ──
    match /users/{userId} {
      // Users can read and write their own profile
      allow read: if isOwner(userId) || (isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super');
      allow write: if isOwner(userId);
    }

    // ── Tenant-Scoped Data ──
    // The app assigns tenantId client-side based on user profile.
    match /tenants/{tenantId} {
      allow read: if userBelongsToTenant(tenantId);
      
      // Protect any subcollection inside a specific tenant
      match /{document=**} {
        allow read, write: if userBelongsToTenant(tenantId);
      }
    }

    // ── Default Deny ──
    // Any path not matched above is denied by default.
  }
}
