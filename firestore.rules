rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // LEADS: Public Write, Admin Read
    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
