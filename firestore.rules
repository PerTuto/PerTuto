rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper Functions ──
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isSuper() {
      return isAuthenticated() && getUserData().role == 'super';
    }

    function userBelongsToTenant(tenantId) {
      return isAuthenticated() && (
        getUserData().tenantId == tenantId || isSuper()
      );
    }

    function hasRole(role) {
      return isAuthenticated() && (
        getUserData().role == role || 
        (getUserData().role is list && role in getUserData().role) ||
        isSuper()
      );
    }

    function isAdmin() {
      return hasRole('admin') || hasRole('executive');
    }

    function isTeacher() {
      return hasRole('teacher');
    }

    // ── User Profiles ──
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isSuper();
      allow write: if request.auth.uid == userId;
    }

    // ── Tenant-Scoped Data ──
    match /tenants/{tenantId} {
      allow read: if userBelongsToTenant(tenantId);
      
      match /classes/{classId} {
        allow read: if userBelongsToTenant(tenantId);
        allow write: if userBelongsToTenant(tenantId) && (isAdmin() || isTeacher());
      }

      match /students/{studentId} {
        allow read: if userBelongsToTenant(tenantId);
        allow write: if userBelongsToTenant(tenantId) && isAdmin();
      }

      match /leads/{leadId} {
        allow read: if userBelongsToTenant(tenantId);
        allow write: if userBelongsToTenant(tenantId) && isAdmin();
      }

      match /invoices/{invoiceId} {
        allow read: if userBelongsToTenant(tenantId);
        allow write: if userBelongsToTenant(tenantId) && isAdmin();
      }

      match /ledger/{txId} {
        allow read: if userBelongsToTenant(tenantId);
        allow write: if userBelongsToTenant(tenantId) && isAdmin();
      }

      match /resources/{resourceId} {
        // Resources are explicitly public-facing.
        allow read: if true;
        allow write: if userBelongsToTenant(tenantId) && (isAdmin() || isTeacher());
      }

      // Default catch-all for other subcollections (assignments, attendance records, etc.)
      match /{allSubcollections=**} {
        allow read: if userBelongsToTenant(tenantId);
        allow write: if userBelongsToTenant(tenantId) && (isAdmin() || isTeacher());
      }
    }
  }
}
